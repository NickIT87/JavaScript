<%- include('../_layouts/adminheader'); -%>

<h2 class="category-title">Add a category</h2>
<a href="/admin/categories" class="btn btn-link">Back to all categories</a>
<br><br>

<form method="POST" action="/admin/categories/add-category">
    <div class="form-group">
        <label for="">Title:</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <button class="btn btn-outline-primary" type="submit" style="margin-top: 0.5rem">Submit a form</button>
</form>

<%- include('../_layouts/adminfooter'); -%>